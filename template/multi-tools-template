#!/bin/bash
# ============================================================
#  Bash Multi-Tool Template
#  Author: Your Name
#  Version: 1.0
#  Description: Reusable menu-based Bash script template
# ============================================================

# --- SETTINGS ---
SCRIPT_NAME="My Bash Toolkit"
SCRIPT_VERSION="1.0"

# --- COLOR CODES ---
RED="\033[31m"
GREEN="\033[32m"
YELLOW="\033[33m"
BLUE="\033[34m"
NC="\033[0m"  # No Color

# --- UTILITY FUNCTIONS ---
pause() {
    read -rp "Press [Enter] to continue..."
}

print_header() {
    clear
    echo -e "${BLUE}============================"
    echo -e "  $SCRIPT_NAME v$SCRIPT_VERSION"
    echo -e "============================${NC}"
}

invalid_option() {
    echo -e "${RED}Invalid option. Please try again.${NC}"
    pause
}

# --- FEATURE FUNCTIONS ---
feature_one() {
    echo -e "${GREEN}Running Feature 1...${NC}"
    # TODO: Replace with your code
    pause
}

feature_two() {
    echo -e "${GREEN}Running Feature 2...${NC}"
    # TODO: Replace with your code
    pause
}

feature_three() {
    echo -e "${GREEN}Running Feature 3...${NC}"
    # TODO: Replace with your code
    pause
}

# --- MAIN MENU ---
while true; do
    print_header
    echo "1) Feature One"
    echo "2) Feature Two"
    echo "3) Feature Three"
    echo "4) Exit"
    echo "----------------------------"
    read -rp "Choose an option [1-4]: " choice

    case "$choice" in
        1) feature_one ;;
        2) feature_two ;;
        3) feature_three ;;
        4) echo "Goodbye!"; exit 0 ;;
        *) invalid_option ;;
    esac
done